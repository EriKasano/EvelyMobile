<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/overview_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorContentEmpty" />

        <TextView
            android:id="@+id/near_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/sample_near_event"
            android:textColor="@color/colorTextBody"
            app:layout_constraintLeft_toRightOf="@+id/overview_image"
            app:layout_constraintTop_toTopOf="@id/overview_image" />

        <TextView
            android:id="@+id/other_upcoming_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/sample_3_min"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/near_event_title"
            app:layout_constraintTop_toBottomOf="@+id/near_event_title" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>